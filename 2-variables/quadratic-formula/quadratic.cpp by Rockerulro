#include <iostream>
#include <cmath>

int main() {

  double a,b,c;
  //Declare 3 variables able to hold decimal numbers
  
  std::cout <<"Enter a: ";
  std::cin >> a;
  //Output this prompt for the user
  
   std::cout <<"Enter b: ";
  std::cin >> b;
   //Output this prompt for the user
  
   std::cout <<"Enter c: ";
  std::cin >> c;
   //Output this prompt for the user
  
  double root1 = (-b+sqrt(b*b-4*a*c))/(2*a);
  //the equation has a + sign
  
  double root2 = (-b-sqrt(b*b-4*a*c))/(2*a);
  //the equation has a - sign
  
  std::cout <<"Root 1 is " <<root1 <<"\n";
  std::cout <<"Root 2 is " <<root2 <<"\n";
  //Result
  
   return 0;
}
